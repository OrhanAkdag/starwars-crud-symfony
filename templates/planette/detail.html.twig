{% extends 'base.html.twig' %}

{% block title %}Hello VehiculeController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/detail.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <div class="example-wrapper">

            <img src="{{ asset('images/' ~ planette.nom ~ '.jpeg' ) }}">



        <h1>Bienvenue sur la planète {{ planette.nom }} ✅</h1>
        <h2>Terrain {{ planette.terrain }}</h2>
        <h2>nbKmTerre {{ planette.nbKmTerre }}</h2>
        <h2>allegiance {{ planette.allegiance }}</h2>
        <h2>description {{ planette.description }}</h2>
        <h2>Date de découverte : {{ planette.deteDecouverte|date('d/m/Y') }}</h2>

        <h2>Les habitants de ma planète : </h2>

        {% for habitant in planette.rensidents %}
            <h2>{{ habitant.firstname }} - {{ habitant.lastname }}</h2>

            <h3>Les véhicules de {{ habitant.firstname }} : </h3>
            {% if habitant.vehicules|length == 0 %}
            Amandine marche à pied
            {% endif %}
            <ol>
                {% for vehicule in habitant.vehicules %}
                    <li>{{ vehicule.nom }} - {{ vehicule.model }}</li>
                {% endfor %}
            </ol>
        {% endfor %}


        <a href="{{ path('planette') }}">Voyager sur une autre planette</a>
    </div>
{% endblock %}

       {% block javascripts %}
           {{ parent() }}
           <script src="{{ asset('javascripts/detail.js') }}"></script>
       {% endblock %}