{% extends 'base_connected.html.twig' %}

{% block title %}Hello VehiculeController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/detail.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <div class="example-wrapper">

            <img src="{{ asset('images/' ~ vehicule.nom ~ '.jpeg' ) }}">



        <h1>Vehicule {{ vehicule.nom }} âœ…</h1>
        <h2>Terrain {{ vehicule.model }}</h2>

        <h2>Les habitants ayant ce vehicule : </h2>

        {% for habitant in vehicule.residents %}
            <h2>{{ habitant.firstname }} - {{ habitant.lastname }}</h2>

        {% endfor %}


        <a href="{{ path('planette') }}">Voir la liste des vehicules</a>
    </div>
{% endblock %}

       {% block javascripts %}
           {{ parent() }}
           <script src="{{ asset('javascripts/detail.js') }}"></script>
       {% endblock %}