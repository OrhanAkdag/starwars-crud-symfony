{% extends 'base.html.twig' %}

{% block title %}Hello residentController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/detail.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <div class="example-wrapper">

            <img src="{{ asset('images/' ~ resident.firstname ~ '.jpeg' ) }}">



        <h1>resident {{ resident.firstname }} ✅</h1>
        <h2>Terrain {{ resident.lastname }}</h2>

        <h2>Les vehicules appartenant à cet habitant : </h2>

        {% for vehicule in resident.vehicules %}
            <h2>{{ vehicule.nom }}</h2>

        {% endfor %}


        <a href="{{ path('resident-list') }}">Voir la liste des residents</a>
    </div>
{% endblock %}

       {% block javascripts %}
           {{ parent() }}
           <script src="{{ asset('javascripts/detail.js') }}"></script>
       {% endblock %}